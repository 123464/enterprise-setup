{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },

    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "eu-central-1",
        "source_ami": "ami-25a97a4a",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "nomad-{{timestamp}}"
    }],

    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sleep 30",
                "mkdir -p /tmp/circleci-provisioner"
            ]
        },
        {
            "type": "file",
            "source": "./nomad-provision.sh",
            "destination": "/tmp/circleci-provisioner/provision.sh"
        },
        {
            "type": "shell",
            "inline": [
                "cd /tmp/circleci-provisioner && sudo su root -c './provision.sh' &&  echo done"
            ]
        }
    ]
}
